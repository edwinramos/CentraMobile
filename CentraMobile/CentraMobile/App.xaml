<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CentraMobile.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="OrangeRed"/>
                <Setter Property="BackgroundColor" Value="White"/>
                <Setter Property="BarTextColor" Value="White"/>
            </Style>
            
            <Style x:Key="bvTitle" TargetType="BoxView">
                <Setter Property="BackgroundColor" Value="OrangeRed"/>
                <Setter Property="HorizontalOptions" Value="FillAndExpand"/>
                <Setter Property="HeightRequest" Value="4"/>
            </Style>

            <Style TargetType="Button">
                <Setter Property="BackgroundColor" Value="Transparent"/>
                <Setter Property="BorderColor" Value="OrangeRed"/>
                <Setter Property="BorderWidth" Value="2"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>