<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CentraMobile.Pages.Settings"
             Title="Configuracion">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <BoxView Style="{StaticResource bvTitle}"/>
            <ListView x:Name="MyListView" RowHeight="60" ItemsSource="{Binding Items}" ItemTapped="MyListView_ItemTapped">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout>
                                <Label Text="{Binding Title}" FontSize="Large" />
                                <Label Text="{Binding Description}" TextColor="Gray"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>