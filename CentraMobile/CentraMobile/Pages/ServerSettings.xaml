<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CentraMobile.Pages.ServerSettings"
             Title="Servidor">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <BoxView Style="{StaticResource bvTitle}"/>
            <Label Text="Tiempo de espera" />
            <Entry x:Name="txtTimeOut" />

            <Label Text="Direccion de servidor" />
            <Entry x:Name="txtServerAddress" Placeholder="http://..."/>

            <Label Text="Contraseña" />
            <Entry x:Name="txtPassword" IsPassword="True"/>

            <Button Text="Guardar" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>