<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CentraMobile.Pages.LogIn">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center" Padding="15">
            <Label Text="CentraPos Mobile" FontSize="Large" HorizontalOptions="Center"/>

            <Entry x:Name="UserCode" Placeholder="Usuario"/>

            <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>

            <Button Text="Log In" Clicked="LogIn_Clicked"/>
            <Button x:Name="btnServer" IsVisible="False" Text="Coneccion a Servidor" Clicked="btnServer_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>